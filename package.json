    "url": "https://gitlab.com/megabyte-labs/python/cli/ansibler/-/issues"
  },
  "type": "module",
  "scripts": {
    "build": "task python:build",
    "help": "task --menu",
    "prepare": "task common:husky",
    "repair": "bash <(curl -sS https://install.doctor/repair)",
    "start": "bash start.sh",
    "test": "[[ -z $CI ]] && task python:test:pytest || task python:test:ci"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-emoji-conventional"
